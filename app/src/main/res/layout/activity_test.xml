<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".test"
    android:gravity="center"
    android:padding="10dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:textColor="@color/orange"
        android:textSize="40dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/maindashboard"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Main        DAshBoard"
            android:textColor="@color/orange"
            android:background="@drawable/custom_button_2"
            />
        <Button
            android:id="@+id/rateus"
            android:layout_width="150dp"
            android:layout_margin="20dp"
            android:layout_height="100dp"
            android:text="Rate Us"
            android:textColor="@color/orange"
            android:background="@drawable/custom_button_3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/invitefriend"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Invite                 Friend"
            android:textColor="@color/orange"
            android:background="@drawable/custom_button_4"/>
        <Button
            android:id="@+id/helpsupport"
            android:layout_width="150dp"
            android:layout_margin="20dp"
            android:layout_height="100dp"
            android:text="Help  And                 Support"
            android:textColor="@color/orange"
            android:background="@drawable/custom_button_5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/contactus"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:text="Contacts   us"
            android:textColor="@color/orange"
            android:background="@drawable/custom_button_6"/>
        <Button
            android:id="@+id/future"
            android:layout_width="150dp"
            android:layout_margin="20dp"
            android:layout_height="100dp"
            android:text="future"
            android:textColor="@color/orange"
            android:background="@drawable/custom_button_7"/>
    </LinearLayout>




</LinearLayout>