<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Upload_PDF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/custom_button_2"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedfilerecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </ScrollView>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/selectfilebtn"
            android:layout_width="100dp"
            android:layout_marginStart="40dp"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:text="Add Files"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/uploadfile"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Upload  Files"
            android:textColor="@color/black"
            android:layout_marginStart="90dp"
            android:background="@color/orange"/>

    </LinearLayout>

        <Button
            android:id="@+id/skipfornow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custombutton3"
            android:text="Skip For Now"
            android:textColor="@color/Dullorange" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/uploadpdfprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="392dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>